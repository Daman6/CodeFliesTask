<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.SignUpFragment">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ImageView
               android:id="@+id/top_image"
               android:layout_width="match_parent"
               android:layout_height="180dp"
               android:src="#00BFA5"/>
           <TextView
               android:id="@+id/signInTv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:gravity="center"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/top_image"
               android:text="Register by using your Apple or Google \n ID today to avail the best theruraptics \n assistance around you"
               android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

           <androidx.cardview.widget.CardView
               android:id="@+id/fname"
               android:layout_width="360dp"
               android:layout_height="45dp"
               app:cardBackgroundColor="#00BFA5"
               android:layout_below="@+id/signInTv"
               android:layout_centerInParent="true"
               app:cardCornerRadius="20dp"
               android:layout_marginTop="10dp"
               >

               <androidx.appcompat.widget.AppCompatEditText
                   android:id="@+id/fnameE"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="5dp"
                   android:hint="First Name*"
                   android:paddingHorizontal="15dp"
                   android:background="@null"
                   android:textSize="15sp"
                   android:textColor="@color/white"
                   android:textColorHint="@color/white"
                  />


           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/lastName"
               android:layout_width="360dp"
               android:layout_height="45dp"
               android:layout_below="@+id/fname"
               android:layout_centerInParent="true"
               android:layout_marginTop="10dp"
               app:cardBackgroundColor="#00BFA5"
               app:cardCornerRadius="20dp">

               <androidx.appcompat.widget.AppCompatEditText
                   android:id="@+id/lastNameE"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="5dp"
                   android:background="@null"
                   android:hint="Last Name*"
                   android:paddingHorizontal="15dp"
                   android:textColor="@color/white"
                   android:textColorHint="@color/white"
                   android:textSize="15dp" />

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/email"
               android:layout_width="360dp"
               android:layout_height="45dp"
               app:cardBackgroundColor="#00BFA5"
               android:layout_below="@+id/lastName"
               android:layout_centerInParent="true"
               app:cardCornerRadius="20dp"
               android:layout_marginTop="10dp"
               >
               <androidx.appcompat.widget.AppCompatEditText
                   android:id="@+id/emailE"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="5dp"
                   android:hint="Email*"
                   android:textSize="15dp"
                   android:paddingHorizontal="15dp"
                   android:background="@null"
                   android:textColor="@color/white"
                   android:textColorHint="@color/white"/>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/areaCodeL"
               android:layout_width="360dp"
               android:layout_height="45dp"
               app:cardBackgroundColor="#00BFA5"
               android:layout_below="@+id/email"
               android:layout_centerInParent="true"
               app:cardCornerRadius="20dp"
               android:layout_marginTop="10dp"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">

                   <androidx.appcompat.widget.AppCompatEditText
                       android:id="@+id/areaCodeE"
                       android:layout_width="100dp"
                       android:layout_height="match_parent"
                       android:layout_marginHorizontal="10dp"
                       android:hint="Area Code"
                       android:textSize="15dp"
                       android:paddingHorizontal="10dp"
                       android:background="@null"
                       android:textColor="@color/white"
                       android:textColorHint="@color/white"/>
                   <View
                       android:layout_width="1dp"
                       android:layout_height="match_parent"
                       android:background="@color/white"
                       android:layout_marginVertical="4dp"/>
                   <androidx.appcompat.widget.AppCompatEditText
                       android:id="@+id/mobileE"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginHorizontal="10dp"
                       android:hint="Mobile Number*"
                       android:paddingHorizontal="15dp"
                       android:textSize="15dp"
                       android:background="@null"
                       android:textColor="@color/white"
                       android:textColorHint="@color/white"/>
               </LinearLayout>


           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/civilId"
               android:layout_width="360dp"
               android:layout_height="45dp"
               app:cardBackgroundColor="#00BFA5"
               android:layout_below="@+id/areaCodeL"
               android:layout_centerInParent="true"
               app:cardCornerRadius="20dp"
               android:layout_marginTop="10dp"
               >
               <androidx.appcompat.widget.AppCompatEditText
                   android:id="@+id/civilIdE"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginHorizontal="10dp"
                   android:hint="Civil ID"
                   android:textSize="15dp"
                   android:paddingHorizontal="15dp"
                   android:background="@null"
                   android:textColor="@color/white"
                   android:textColorHint="@color/white"/>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/radioBtnL"
               android:layout_width="320dp"
               android:layout_height="45dp"
               app:cardBackgroundColor="#EDEDED"
               android:layout_below="@+id/civilId"
               android:layout_centerInParent="true"
               app:cardCornerRadius="20dp"
               android:layout_marginTop="10dp"
               >
              <RadioButton
                  android:id="@+id/radioE"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="I would prefer to remain anonymous"
                  android:gravity="center"
                  android:enabled="true"
                  android:layout_marginHorizontal="10dp"/>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/registerbtnL"
               android:layout_width="300dp"
               android:layout_height="45dp"
               app:cardBackgroundColor="#00BFA5"
               android:layout_below="@+id/radioBtnL"
               android:layout_centerInParent="true"
               app:cardCornerRadius="20dp"
               android:layout_marginTop="10dp"
               >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="Register"
                   android:textColor="@color/white"
                   android:textSize="15dp"
                   android:gravity="center"/>

           </androidx.cardview.widget.CardView>

           <TextView
               android:id="@+id/conditionText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:gravity="center"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/registerbtnL"
               android:textColor="#9E9D9D"
               android:text="By continuing you agree to Terms &amp; conditons"
               android:textAppearance="@style/TextAppearance.AppCompat.Body2" />



       </RelativeLayout>

    </FrameLayout>
</layout>